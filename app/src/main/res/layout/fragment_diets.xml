<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/textViewThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diyetler "
                android:textColor="#555555"
                android:layout_marginLeft="20dp"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:layout_width="206dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"

                android:src="@drawable/pac" />


        </LinearLayout>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="37dp"
            android:clipToOutline="true"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/light_green"
            android:layout_marginTop="25dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFilterKulturel"
                android:layout_width="wrap_content"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/yesil"
                android:background="@drawable/roundcorner"
                android:text="Kültürel"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFilterUnluler"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:backgroundTint="#F8B146"
                android:background="@drawable/roundcorner"
                android:text="Ünlüler"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFilterPop"
                android:layout_width="100dp"
                android:textSize="14sp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#F6856C"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Popüler"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDiets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</FrameLayout>