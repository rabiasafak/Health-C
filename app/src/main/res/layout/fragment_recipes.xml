<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipesFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarifler "
                android:textColor="#555555"
                android:layout_marginLeft="20dp"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:layout_width="43dp"
                android:layout_height="31dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"

                android:src="@drawable/img"/>






        </LinearLayout>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="37dp"
            android:clipToOutline="true"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/pyp"
            android:layout_marginTop="25dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFiltertatli"
                android:layout_width="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_height="48dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/purple"
                android:text="Tatlı"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFilteranayemek"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="14sp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/pyp"
                android:text="Ana Yemek"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFilteratistirmalik"
                android:layout_width="100dp"
                android:textSize="14sp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/pyp"
                android:background="@drawable/roundcorner"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Atıştırmalık"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecipes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</FrameLayout>